generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LeaveStatus {
  AVAILABLE
  LEAVE
  WIPRO_HOLIDAY
  WEEKEND
}

model wipro_holidays {
  id        String   @id @default(dbgenerated("nanoid()")) @db.VarChar(14)
  date      DateTime
  name      String?
  createdAt DateTime @default(now())
  createdBy String?
  updatedAt DateTime @updatedAt
  updatedBy String?

  @@index([date])
  @@unique([date])
}

model user_leave_dates {
  id        String      @id @default(dbgenerated("nanoid()")) @db.VarChar(14)
  userId    String
  date      DateTime
  status    LeaveStatus
  createdAt DateTime     @default(now())
  createdBy String?
  updatedAt DateTime     @updatedAt
  updatedBy String?

  @@index([userId])
  @@index([date])
  @@index([userId, date])
  @@index([status])
  @@unique([userId, date])
}
